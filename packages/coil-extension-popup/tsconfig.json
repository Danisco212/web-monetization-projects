{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    // needed so automatic imports are fully aliased
    "paths": {
      "@coil/extension-popup/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
