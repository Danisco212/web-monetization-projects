{
    "manifest_version": 3,
    "name": "Daniel Isaac Injection Extension",
    "description": "This is a test injection extension made with mv3",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "webNavigation",
        "tabs"
    ],
    "icons": {
        "16": "/res/icon16.png",
        "48": "/res/icon48.png",
        "128": "/res/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "/static/injection.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}